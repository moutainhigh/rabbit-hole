<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lotus.wl.biz.mapper.CompanyMapper">
  <select id="paging" resultType="com.github.lotus.wl.biz.entity.Company">
    SELECT wc.* FROM wl_company wc
  </select>

  <select id="complete" resultType="com.github.lotus.wl.biz.entity.Company">
    SELECT wc.* FROM wl_company wc
    <where>
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (wc.remark LIKE #{keyword} OR wc.title LIKE #{keyword})
      </if>
    </where>
  </select>
</mapper>
