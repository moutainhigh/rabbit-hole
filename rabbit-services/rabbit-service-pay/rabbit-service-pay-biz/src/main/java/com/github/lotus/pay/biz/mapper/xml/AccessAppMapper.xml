<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lotus.pay.biz.mapper.AccessAppMapper">
  <select id="paging" resultType="com.github.lotus.pay.biz.entity.AccessApp">
    SELECT *
    FROM bmw_access_app
  </select>

  <select id="complete" resultType="com.github.lotus.pay.biz.entity.AccessApp">
    SELECT baa.*
    FROM bmw_access_app baa
    <where>
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (baa.title LIKE #{keyword})
      </if>
    </where>
  </select>
</mapper>
