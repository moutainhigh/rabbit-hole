<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="in.hocg.rabbit.mall.biz.mapper.CouponProductRefMapper">
  <select id="listProductCategoryByCouponId" resultType="in.hocg.rabbit.mall.biz.entity.Product">
    SELECT pp.*
    FROM pms_product pp
           LEFT JOIN mkt_coupon_product_ref mcpr on pp.id = mcpr.product_id
    <where>
      AND mcpr.coupon_id = #{couponId}
    </where>
  </select>
</mapper>
