<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lotus.mall.biz.mapper.ProductMapper">
  <select id="complete" resultType="com.github.lotus.mall.biz.entity.Product">
    SELECT pp.*
    FROM pms_product pp
    <where>
      pp.delete_flag = 0
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (pp.title LIKE #{keyword} OR pp.attrs LIKE #{keyword})
      </if>
    </where>
  </select>

  <select id="paging" resultType="com.github.lotus.mall.biz.entity.Product">
    SELECT pp.*
    FROM pms_product pp
    <where>
      pp.delete_flag = 0
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (pp.title LIKE #{keyword} OR pp.attrs LIKE #{keyword})
      </if>
    </where>
  </select>
</mapper>
